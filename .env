# Database Configuration (Containerized PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sharefile
DB_USER=sharefile-db-user
DB_PASSWORD=sharefile-db-password

# Keycloak Database
KEYCLOAK_DB=keycloak

# Keycloak Configuration
KEYCLOAK_ADMIN=sharefile-keycloak-user
KEYCLOAK_ADMIN_PASSWORD=sharefile-keycloak-password
KEYCLOAK_REALM=sharefile
KEYCLOAK_CLIENT_ID=sharefile-frontend
KEYCLOAK_CLIENT_SECRET=your-client-secret

# MinIO Configuration
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123
MINIO_BUCKET_NAME=sharefile-files

# Application Configuration
APP_ENV=development
APP_PORT=8081
FRONTEND_PORT=4200

# File Upload Limits
MAX_FILE_SIZE=1GB
MAX_FILES_PER_UPLOAD=10
DEFAULT_LINK_EXPIRY_DAYS=7

# Email Configuration (per notifiche)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=abrefaemmanuel@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=abrefaemmanuel@gmail.com

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Monitoring
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Development
ENABLE_CORS=true
LOG_LEVEL=DEBUG